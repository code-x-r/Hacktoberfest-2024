board=[["0","1","2"],
      ["3","4","5"],
      ["6","7","8"]]
def print_board():
  for row in board:
    print(row)
def check_game(mark):
  #first let's check row manually
  for i in range(3):
    if board[i][0]==mark and board[i][1]==mark and board[i][2]==mark:
      return True
    

#Then colunms manully
  for i in range(3):
    if board[0][i]==mark and board[1][i]==mark and board[2][i]==mark:
      return True
    

#first diagonal manually
  if board[0][0]==mark and board[1][1]==mark and board[2][2]==mark:
     return True
  if board[0][2]==mark and board[1][1]==mark and board[2][0]==mark:
     return True
   

    
#main game funtion
def play_tic_tac_toe():
  current_player="1"
  mark="X"
  moves=0


  while(moves<9):
    #print("player",current_player,"moves.")
    print("player"+current_player+"moves.")
    print("please enter the cell no:")
    cell=int(input())

    row=cell//3
    col=cell%3
    if board[row][col]!="X" and board[row][col]!="O":
        board[row][col]=mark
        moves+=1

        result=check_game(mark)


    else:
        print("this cell is occupied!!,Try another one")
        continue
    if result:
       print("player"+current_player+"has won the game")
       break
    if moves==9:
       print("It's a Draw")
    if current_player=="1":
       current_player="2"
       mark="O"
    else:
       current_player="1"
       
       marl="X"
    print_board()
play_tic_tac_toe()
